    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
</head>

<h1>
    Welcome to Financial Planner.
</h1>

<div class="widget-box">
    <div class="widget-title">
        <span class="icon"> <i class="icon-refresh"></i> </span>
        <h5>News updates</h5>
    </div>
    @foreach (var notification in ViewBag.Notifications)
    {
        <div class="widget-content nopadding updates" style="padding:10px ">
            <div class="new-update clearfix">
                <i class="icon-ok-sign"></i>
                <div class="update-done"><a href="@Url.Action("Index","Accounts", new { id = notification.AccountId })" title=""><strong>@notification.Type</strong></a> <span>@notification.Description</span> </div>
                <div class="update-date"><span class="update-day">@notification.Created</span>Nov</div>
            </div>
        </div>

    }
</div>

