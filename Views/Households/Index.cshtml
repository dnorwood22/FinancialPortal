@model FinancialPortal.Models.CodeFirst.Household

@{
    ViewBag.Title = "Index";
}

@if (Model.Accounts.Count() == 0)
{
        <p>Before you viewing any information of your household, you must first create an account <a>@Url.Action("Create", "Accounts")</a>here.</p>
}
else
{
    if (Model.Accounts.SelectMany(a => a.Transactions).Count() == 0)
    {
            <p>One last step: click the "new transaction" button to add a transaction.</p>
    }
    else
    {

        if (ViewBag.HouseHold != null)
        {
            @ViewBag.HouseHold


        }
        else
        {
                < span > NO HOUSEHOLD </ span >
        }



